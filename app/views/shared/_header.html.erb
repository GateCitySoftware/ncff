  <div class="row cols-2">
    <div class="col">
      <%= image_tag('ncff-10-anv-logo.png', style: 'height:100px;') %>
    </div>
    <div class="col">
      <div class="row justify-content-end">
        <% if current_user.present? %>
          <div class="col-auto">
            <div class="row cols-2">
              <div class="col">
                <% if current_user.fan? %>
                  <button class="btn btn-lg btn-outline me-4"%><%= current_user.identifier %></button>
                <% else %>
                  <button class="btn btn-lg btn-outline me-4"%><%= "#{current_user.identifier} - #{current_user.role.capitalize} Account" %></button>
                <% end %>
              </div>
              <div class="col">
                <%= button_to "LOG OUT", logout_path, method: :delete, class: "btn btn-lg btn-outline-light" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="col-auto">
            <a class="btn btn-lg btn-outline-light" href="/login">LOGIN</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>




