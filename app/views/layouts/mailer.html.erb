    <div class="container">
        <div class="logo">
            <img src="https://gcs-ncff.s3.us-east-2.amazonaws.com/ncff-logo.png" alt="NC Folk Festival Logo" style="max-width: 200px;">
        </div>
        
        <div class="content">
            <!-- Main content placeholder -->
            <%= yield %>
        </div>
        
        <div class="fine-print">
