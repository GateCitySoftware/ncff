    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


    <!-- AROUND THEME IMPORTS FOR CONFERENCE LANDING PAGE -->
    <!-- Webmanifest + Favicon / App icons -->
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/png" href="assets/app-icons/icon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="assets/app-icons/icon-180x180.png">
        
    <!-- Import Google font (Inter) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&amp;display=swap" rel="stylesheet" id="google-font">

    <!-- Vendor styles -->
    <!-- <link rel="stylesheet" media="screen" href="assets/vendor/swiper/swiper-bundle.min.css"> -->
    <!-- <link rel="stylesheet" media="screen" href="assets/vendor/lightgallery/css/lightgallery-bundle.min.css"> -->
    <!-- <link rel="stylesheet" media="screen" href="assets/vendor/simplebar/dist/simplebar.min.css"> -->

    <!-- Font icons -->
    <link rel="stylesheet" href="assets/icons/around-icons.min.css">

    <!-- Theme styles + Bootstrap -->
    <link rel="stylesheet" media="screen" href="assets/css/theme.min.css">
    <!-- END OF AROUND THEME IMPORTS FOR CONFERENCE LANDING PAGE -->


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>

    <%= yield :head %> 

    <%= favicon_link_tag 'ncff-logo.png' %>
    <title>NCFF</title>
  </head>
  <body>
    <% flash.each do |type, message| %>
      <% bootstrap_class = type == "notice" ? "alert-info" : "alert-danger" %>
      <div class="alert <%= bootstrap_class %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <div class="row">
      <h1 class="mb-4 text-center display-4 fw-bold"><%= @data.page_name %></h1>
    </div>

    <% if @data&.respond_to?(:page_name) %>
      <div class="row">
        <h1 class="mb-4 text-center display-4 fw-bold"><%= @data.page_name %></h1>
      </div>
    <% end %>

    <%= yield %>

    <%= yield :full_width_content %>

    <%= render 'shared/footer' %>
  </body>
</html>