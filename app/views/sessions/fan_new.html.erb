<div class="row mt-4">
  <div class="col text-center mt-4">
    <%= link_to root_path do %>
      <%= image_tag('ncff-10-anv-logo.png', style: 'height:100px;') %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center mb-4">Log In</h1>
          <p class="text-center">Enter your email address or phone number to start saving your Favorites.</p>
          <p class="text-center">No password, no username required.</p>
          <%= form_with(url: login_path, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <%= form.hidden_field :user_type, value: "fan" %>
            <div class="mb-3">
              <%= form.label :identifier, "Email or Phone", class: "form-label" %>
              <%= form.text_field :identifier, required: true, class: "form-control", placeholder: "Enter your email or phone" %>
              <div class="invalid-feedback">
                Please provide a valid email address or phone number.
              </div>
            </div>
            <div class="d-grid">
              <%= form.submit "Login", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>