<div class="container">
  <h1 class="mb-4">Editing Artist</h1>

  <h3>Basic Info</h3>
  <%= form_with(model: @artist, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if @artist.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h4>
        <ul>
          <% @artist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :bio, class: "form-label" %>
      <%= form.text_area :bio, class: "form-control", rows: 5 %>
    </div>

    <div class="mb-3">
      <h3>Genres</h3>
      <div class="tag-selection">
        <%= form.collection_check_boxes :tag_ids, @tags, :id, :name do |b| %>
          <div class="form-check">
            <%= b.check_box(class: "form-check-input") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <h3>Social Media Links / Website</h3>
      <div class="row">
        <%= form.fields_for :external_links do |link_form| %>
          <% ExternalLink::LINK_TYPES.each do |link_type| %>
            <div class="col-lg-6 col-md-12 mb-3">
              <%= link_form.label "#{link_type.downcase}_url".to_sym, "#{link_type} URL", class: "form-label" %>
              <%= link_form.text_field "#{link_type.downcase}_url".to_sym, class: "form-control", placeholder: "Copy and paste #{link_type} link here or leave blank" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>

<h3>Images</h3>



<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
    <% @artist.uploads.each do |upload| %>
      <div class="col">
        <%= image_tag(upload.s3_url, class: "img-thumbnail", alt: "Artist upload") %>
      </div>
    <% end %>
  </div>
</div>


<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
    <% @artist.uploads.each do |upload| %>
      <div class="col">
        <div class="position-relative image-container">
          <%= image_tag(upload.s3_url, class: "img-thumbnail w-100", alt: "Artist upload") %>
          <div class="overlay d-flex justify-content-center align-items-center">
            <%= button_to "Delete", upload_path(upload), method: :delete, class: "btn btn-danger btn-sm me-2", data: { confirm: "Are you sure?" } %>
            <%= button_to "Make Card Image", upload_path(upload), method: :patch, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .image-container {
    position: relative;
    overflow: hidden;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s;
  }
  .image-container:hover .overlay {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('turbo:load', function() {
    const containers = document.querySelectorAll('.image-container');
    containers.forEach(container => {
      container.addEventListener('mouseenter', () => {
        container.querySelector('.overlay').style.opacity = '1';
      });
      container.addEventListener('mouseleave', () => {
        container.querySelector('.overlay').style.opacity = '0';
      });
    });
  });
</script>








<%= form_with(url: @upload, local: true, multipart: true) do |form| %>
