<div class="container">
  <h1 class="mb-4">Editing Artist</h1>

  <div class="mt-3 d-flex justify-content-end">
    <%= link_to 'Show Artist', @artist, class: "btn btn-secondary me-2" %>
    <%= link_to 'Back to All Artists', artists_path, class: "btn btn-outline-secondary" %>
  </div>

  <h3>Basic Info</h3>
  <%= form_with(model: @artist, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if @artist.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h4>
        <ul>
          <% @artist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :tagline, class: "form-label" %>
      <%= form.text_field :tagline, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :bio, class: "form-label" %>
      <%= form.text_area :bio, class: "form-control", rows: 5 %>
    </div>

    <div class="mb-3">
      <h3>Genres</h3>
      <div class="tag-selection">
        <%= form.collection_check_boxes :tag_ids, @tags, :id, :name do |b| %>
          <div class="form-check">
            <%= b.check_box(class: "form-check-input") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <h3>Social Media Links / Website</h3>
      <div class="row">
        <%= form.fields_for :external_links do |link_form| %>
          <% ExternalLink::LINK_TYPES.each do |key, value| %>
            <div class="col-lg-6 col-md-12 mb-3">
              <%= link_form.label "#{key}_url".to_sym, "#{value[:display_text]} URL", class: "form-label" %>
              <%= link_form.text_field "#{key}_url".to_sym,
                    class: "form-control",
                    placeholder: "Copy and paste #{value[:display_text]} link here or leave blank",
                    value: @artist.external_links.find{|link| link.link_type == key}&.url
                    # TODO: this is a likely N+1 query, fix htis!!!!!!!!!
              %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>


  <hr class="my-4">

<h3>Images</h3>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
    <% @artist.uploads.each do |upload| %>
      <div class="col">
        <div class="position-relative image-container <%= 'border border-3 border-primary' if upload.image_type == 'primary' %>">
          <%= image_tag(upload.s3_url, class: "img-thumbnail w-100", alt: "Artist upload") %>
          <% if upload.image_type == 'primary' %>
            <p class="text-center fw-bold my-3">Primary Image</p> 
          <% end %>
          <div class="overlay d-flex justify-content-center align-items-center">
            <%= button_to "Delete", upload_path(upload), method: :delete, class: "btn btn-danger btn-sm me-2", data: { confirm: "Are you sure?" } %>
            <% unless upload.image_type == 'primary' %>
              <%= button_to "Set as Primary", set_primary_upload_path(upload), method: :patch, class: "btn btn-primary btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .image-container {
    position: relative;
    overflow: hidden;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s;
  }
  .image-container:hover .overlay {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('turbo:load', function() {
    const containers = document.querySelectorAll('.image-container');
    containers.forEach(container => {
      container.addEventListener('mouseenter', () => {
        container.querySelector('.overlay').style.opacity = '1';
      });
      container.addEventListener('mouseleave', () => {
        container.querySelector('.overlay').style.opacity = '0';
      });
    });
  });
</script>


<h3 class="mt-4">Upload Images</h3>

<%= form_with(url: @upload, local: true, multipart: true, class: "mb-4") do |form| %>
  <% if @upload.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h4>
      <ul>
        <% @upload.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :uploadable_type, value: @artist.class.name %>
  <%= form.hidden_field :uploadable_id, value: @artist.id %>

  <div class="mb-3">
    <%= form.label :images, class: "form-label" %>
    <div class="input-group">
      <%= form.file_field :images, multiple: true, accept: 'image/*', class: "form-control", id: "customFile" %>
      <%= form.submit 'Upload Images', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>



  <hr class="my-4">


<h3 class="mt-4">Media Players</h3>





<% @artist.embedded_contents.each do |content| %>
  <p><%= content.embed_code.html_safe %>
 <% end %>





<h4 class="mt-4">Add New Media Player</h3>

<%= form_with(url: @embedded_content, class: "needs-validation", novalidate: true) do |form| %>
  <% if @embedded_content.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(embedded_content.errors.count, "error") %> prohibited this embedded content from being saved:</h4>
      <ul>
        <% @embedded_content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :embeddable_type, value: @artist.class.name %>
  <%= form.hidden_field :embeddable_id, value: @artist.id %>

  <div class="mb-3">
    <%= form.label :url, 'URL', class: "form-label" %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :content_type, 'Content Type', class: "form-label" %>
    <%= form.select :content_type, options_for_select(EmbeddedContent::CONTENT_TYPES), { include_blank: 'Select a Content Type' }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :embed_code, 'Embed Code (copy and paste from external source)', class: "form-label" %>
    <%= form.text_area :embed_code, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description (optional)", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>











  <div class="mt-3">
    <%= link_to 'Show', @artist, class: "btn btn-secondary me-2" %>
    <%= link_to 'Back', artists_path, class: "btn btn-outline-secondary" %>
  </div>
</div>