  <% end %>

  <%= form.hidden_field :uploadable_type, value: @artist.class.name %>%
  <%= form.hidden_field :uploadable_id, value: @artist.id %>%

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, accept: 'image/*' %>
  </div>

  <div class="actions">
    <%= form.submit 'Upload Images' %>
  </div>
<% end %>

  <div class="mt-3">
    <%= link_to 'Show', @artist, class: "btn btn-secondary me-2" %>
    <%= link_to 'Back', artists_path, class: "btn btn-outline-secondary" %>
  </div>
</div>