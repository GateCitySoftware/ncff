<style>
 .carousel-inner {
   background-color: black;
 }
 .carousel-item {
   height: 500px;
   max-height: 500px;
 }
 .carousel-item img {
   object-fit: contain;
   height: 100%;
   width: 100%;
 }

</style>

  <div class="mt-3 d-flex justify-content-end">
    <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-primary my-4' %>
  </div>

<!-- IMG COUSEL START -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <% @artist.uploads.each_with_index do |image, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= image_tag(image.s3_url, class: "d-block w-100", alt: "...") %>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- IMG CAROUSEL END -->


<!-- TAGS START -->
<div class="row my-4"> 
  <%= image_tag("ncff-logo.png", class: "", style: "max-height:100px;width:auto;", alt: "...") %>
  <h1 class="display-2"><%= @artist.name %></h1>
  <div class="d-flex flex-wrap gap-2">
    <% @artist.tags.each do |tag| %>
      <a href="#" class="btn btn-outline-primary btn-sm"><%= tag.name %></a>
    <% end %>
  </div>
</div>
<!-- TAGS END -->

<!-- BIO START -->
<div class="row">
  <div class="col-lg-6 col-md-12 p-4">
    <!-- TODO: look into using ActiveText to make this a full featured editor -->
    <p class="mt-3"><%= @artist.bio&.html_safe %>
  </div>

  <div class="col-lg-6 col-md-12 p-4">
    <%= @artist.embedded_contents.first&.embed_code&.html_safe %>
  </div>
</div>
<!-- BIO END -->

<!-- SOCIAL MEDIA START -->
<div class="row">
  <div class="row justify-content-center">
    <div class="btn-group" re="group" aria-label="Social media links">
      <% @artist.external_links.each do |external_link| %>
        <a href="<%= external_link.url %>" class="btn btn-outline-primary m-1" target="_blk" rel="noopener noreferrer">
          <i class="bi <%= external_link.bootstrap_icon_value %>"></i><%= external_link.link_type%>
        </a>
      <% end %>
    </div>
  </div>
</div>
<!-- SOCIAL MEDIA END -->

<!-- IFRAMES START -->
<% @artist.embedded_contents[1..-1]&.each do |embedded_content| %>
  <div class="row my-4">
    <div class="col text-center">
      <%= embedded_content.embed_code.html_safe %>
    </div>
  </div>
<% end %>
<!-- IFRAMES END -->

<!-- STATIC IMG GALLERY START -->
<div class="container mt-5">
  <div class="row g-3 text-center">
    <% @artist.uploads.each do |upload| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <%= image_tag(upload.s3_url, class: "img-fluid rounded", alt: "...") %>
      </div>
    <% end %>
  </div>
</div>
<!-- STATIC IMG GALLERY END -->




