<div class="container">
  <!-- Admin Edit Button -->
  <% if current_user&.admin? %>
    <div class="d-flex justify-content-end mt-4">
      <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <!-- Back to Artists Button -->
  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Back to Artists", artists_path, class: "btn btn-secondary" %>
  </div>

  <!-- Image Carousel -->
  <div id="artistCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <% @artist.uploads.each_with_index do |image, index| %>
        <button type="button" data-bs-target="#artistCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="<%= 'true' if index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
      <% end %>
    </div>
    <div class="carousel-inner">
      <% @artist.uploads.each_with_index do |image, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <%= image_tag(image.s3_url(size: 'large'), class: "d-block w-100", alt: "Artist Image #{index + 1}") %>
        </div>
      <% end %>
    </div>
    <% if @artist.uploads.size > 1 %>
      <button class="carousel-control-prev" type="button" data-bs-target="#artistCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#artistCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    <% end %>
  </div>

  <!-- Artist Info and Tags -->
  <div class="row mt-4 align-items-center">
    <div class="col-auto">
      <%= image_tag("ncff-logo.png", class: "img-fluid", style: "max-height: 100px; width: auto;", alt: "NCFF Logo") %>
    </div>
    <div class="col">
      <h1 class="display-4"><%= @artist.name %></h1>
      <div class="d-flex flex-wrap gap-2 mt-2">
        <% @artist.tags.each do |tag| %>
          <a href="#" class="btn btn-outline-primary btn-sm"><%= tag.name %></a>
        <% end %>
      </div>
    </div>