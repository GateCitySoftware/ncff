<p style="color: green"><%= notice %></p>


<h1>Artists</h1>

<div id="artists">
  <div class="row">
    <% @artists.each do |artist| %>
      <div class="col-sm-12 col-lg-4">
        <div class="card m-4">
          <%= link_to artist_path(artist.first) do %>
            <img src='<%= artist.second %>' class='card-img-top'>
          <% end %>

          <div class="card-body">

            <p class="card-text fw-bold">
              <%= artist.first %>
            </p>
            <span class="badge bg-primary mb-4"><%= @stages.sample %></span>

            <p class="card-text">
              <%= @days.sample %> at <%= @times.sample %>
            </p>

            <div class="d-flex flex-wrap gap-2">
              <% @music_genres.sample((1..4).to_a.sample).each do |genre| %>
                <a href="#" class="btn btn-outline-primary btn-sm"><%= genre %></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>