    <script>
        // Hidden "Join The Conversation" Link
        document.getElementById('hidden-link').addEventListener('click', function(e) {
            e.preventDefault();
            const name = prompt("Enter your name to join the conversation:");
            if (name) {
                alert(`Welcome, ${name}! You've joined the conversation.`);
                // Here you could redirect to a private page or show hidden content
            }
        });

        // Founders Club Questionnaire
        let questionnaireResponses = 0;

        document.getElementById('start-questionnaire').addEventListener('click', function() {
            const email = prompt("Enter your email address:");
            if (email) {
                // Simple email validation
                if (email.includes('@') && email.includes('.')) {
                    const questions = [
                        "What's your biggest challenge in our industry?",
                        "How often would you use our product?",
                        "What features are most important to you?"
                    ];
                    
                    for (let question of questions) {
                        const answer = prompt(question);
                        if (!answer) break;  // User cancelled
                    }
                    
                    questionnaireResponses++;
                    let discount;
                    if (questionnaireResponses <= 1) {
                        discount = 100;
                    } else if (questionnaireResponses <= 20) {
                        discount = 75;
                    } else {
                        discount = 50;
                    }
                    
                    alert(`Thank you for completing the questionnaire! You've been added to our pilot program with a ${discount}% discount.`);
                } else {
                    alert("Please enter a valid email address.");
                }
            }
        });
    </script>