<div class="container mt-4">
  <h1 class="mb-4">Activations</h1>
  
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @activations.each do |activation| %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= activation.image %>" class="card-img-top img-fluid mx-auto d-block" alt="<%= activation.name %>" style="max-width: 200px; height: auto;">
          <div class="card-body">
            <h5 class="card-title"><%= activation.name %></h5>
            <p class="card-text"><%= activation.description %></p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Website:</strong> <a href="<%= activation.website %>" target="_blank"><%= activation.website %></a></li>
            </ul>
          </div>
          <div class="card-footer">
            <% activation.social_media_links.each do |platform, username| %>
              <a href="#" class="btn btn-outline-secondary btn-sm me-2"><%= platform.capitalize %>: <%= username %></a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>