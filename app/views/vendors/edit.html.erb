<div class="container">
  <h1 class="mb-4">Editing Vendor</h1>

  <div class="mt-3 d-flex justify-content-end">
    <%= link_to 'Show Artist', @vendor, class: "btn btn-secondary me-2" %>
    <%= link_to 'Back to All Artists', vendors_path, class: "btn btn-outline-secondary" %>
  </div>

  <h3>Basic Info</h3>

  <%= form_with(model: @vendor, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if @vendor.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><%= pluralize(@vendor.errors.count, "error") %> prohibited this artist from being saved:</h4>
        <ul>
          <% @vendor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%= form.label :website %>
      <%= form.url_field :website %>
    </div>

    <div>
      <%= form.label :category %>
      <%= form.text_field :category %>
    </div>

    <div>
      <%= form.label :slug %>
      <%= form.text_field :slug %>
    </div>

    <div>
      <%= form.label :phone %>
      <%= form.telephone_field :phone %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div>
      <%= form.label :address %>
      <%= form.text_area :address %>
    </div>


    <div class="mb-3">
      <h3>Tags</h3>
      <div class="tag-selection">
        <%= form.collection_check_boxes :tag_ids, @tags, :id, :name do |b| %>
          <div class="form-check">
            <%= b.check_box(class: "form-check-input") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <h3>Social Media Links / Website</h3>
      <div class="row">
        <%= form.fields_for :external_links do |link_form| %>
          <% ExternalLink::LINK_TYPES.each do |key, value| %>
            <div class="col-lg-6 col-md-12 mb-3">
              <%= link_form.label "#{key}_url".to_sym, "#{value[:display_text]} URL", class: "form-label" %>
              <%= link_form.text_field "#{key}_url".to_sym,
                    class: "form-control",
                    placeholder: "Copy and paste #{value[:display_text]} link here or leave blank",
                    value: @vendor.external_links.find{|link| link.link_type == key}&.url
                    # TODO: this is a likely N+1 query, fix htis!!!!!!!!!
              %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>

  <hr class="my-4">

<h3>Images</h3>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
    <% @vendor.uploads.each do |upload| %>
      <div class="col">
        <div class="position-relative image-container <%= 'border border-3 border-primary' if upload.image_type == 'primary' %>">
          <%= image_tag(upload.s3_url, class: "img-thumbnail w-100", alt: "Artist upload") %>
          <% if upload.image_type == 'primary' %>
            <p class="text-center fw-bold my-3">Primary Image</p> 
          <% end %>
          <div class="overlay d-flex justify-content-center align-items-center">
            <%= button_to "Delete", upload_path(upload), method: :delete, class: "btn btn-danger btn-sm me-2", data: { confirm: "Are you sure?" } %>
            <% unless upload.image_type == 'primary' %>
              <%= button_to "Set as Primary", set_primary_upload_path(upload), method: :patch, class: "btn btn-primary btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .image-container {
    position: relative;
    overflow: hidden;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s;
  }
  .image-container:hover .overlay {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('turbo:load', function() {
    const containers = document.querySelectorAll('.image-container');
    containers.forEach(container => {
      container.addEventListener('mouseenter', () => {
        container.querySelector('.overlay').style.opacity = '1';
      });
      container.addEventListener('mouseleave', () => {
        container.querySelector('.overlay').style.opacity = '0';
      });
    });
  });
</script>


<h3 class="mt-4">Upload Images</h3>

<%= form_with(url: @upload, local: true, multipart: true, class: "mb-4") do |form| %>
  <% if @upload.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h4>
      <ul>
        <% @upload.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :uploadable_type, value: @vendor.class.name %>
  <%= form.hidden_field :uploadable_id, value: @vendor.id %>

  <div class="mb-3">
    <%= form.label :images, class: "form-label" %>
    <div class="input-group">
      <%= form.file_field :images, multiple: true, accept: 'image/*', class: "form-control", id: "customFile" %>
      <%= form.submit 'Upload Images', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>



  <hr class="my-4">





















  <div class="mt-3">
    <%= link_to 'Show', @vendor, class: "btn btn-secondary me-2" %>
    <%= link_to 'Back', artists_path, class: "btn btn-outline-secondary" %>
  </div>
</div>