   <style>
        .vendor-box {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }
    </style>


<div class="container">
  <h1 class="mb-4">Eat & Drink</h1>
  <div class="row row-cols-1 row-cols-md-2 g-4 mb-4">
    <div class="col">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle w-100" type="button" id="genreDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          By Cuisine
        </button>
        <ul class="dropdown-menu" aria-labelledby="genreDropdown">
          <li><a class="dropdown-item" href="<%= artists_path %>"><%= "All (#{Artist.count})" %></a></li>
          <% Tag.genre_map.each do |genre, artist_count| %>
            <li><a class="dropdown-item" href="<%= artists_path(category: 'genre', option: genre) %>"><%= "#{genre}  (#{artist_count})" %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle w-100" type="button" id="stageNameDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          By Location 
        </button>
        <ul class="dropdown-menu" aria-labelledby="stageNameDropdown">
          <li><a class="dropdown-item" href="<%= artists_path %>">All</a></li>
          <% Performance.stage_map.each do |stage, performance_count| %>
            <li><a class="dropdown-item" href="<%= artists_path(category: 'stage', option: stage) %>"><%= "#{stage}  (#{performance_count})" %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>






  <!-- Row with two 25% and 75% columns -->
  <div class="row">
      <div class="col-lg-3">
          <div class="vendor-box">
              <h3>Vendor Logo</h3>
              <p>Logo or image placeholder</p>
          </div>
      </div>
      <div class="col-lg-9">
          <div class="vendor-box">
              <h2>Vendor Overview</h2>
              <p>Detailed overview of the vendor, including key information, specialties, or unique selling points.</p>
          </div>
      </div>
  </div>

  <!-- Row with three 50%, 25% and 25% columns -->
  <div class="row">
      <div class="col-lg-6">
          <div class="vendor-box">
              <h3>Products/Services</h3>
              <ul>
                  <li>Product 1</li>
                  <li>Product 2</li>
                  <li>Service 1</li>
                  <li>Service 2</li>
              </ul>
          </div>
      </div>
      <div class="col-lg-3">
          <div class="vendor-box">
              <h3>Contact Info</h3>
              <p>Phone: (123) 456-7890</p>
              <p>Email: vendor@example.com</p>
          </div>
      </div>
      <div class="col-lg-3">
          <div class="vendor-box">
              <h3>Location</h3>
              <p>123 Main Street</p>
              <p>City, State 12345</p>
          </div>
      </div>
  </div>