<div class="card rounded-2 m-3 shadow">
  <div class="rounded-2 border border-4 border-black <%= stage_css_color_classes[stage_name] %>">
    <%= link_to artist_path(performance[:artist_slug]) do %>
      <%= image_tag(performance[:artist_image] || artist_stock_image, class: 'border border-black', style: "display: block; height: 120px; margin: auto") %>
    <% end %>
  </div>
  <div class="card-body">
    <h3><%= performance[:display_time] %></h3>
    <%= link_to artist_path(performance[:artist_slug]), class: 'text-decoration-none' do %>
      <% if performance[:artist_name].length > 25 %>
        <h5 class="card-title"><%= performance[:artist_name] %></h5>
      <% else %>
        <h4 class="card-title"><%= performance[:artist_name] %></h4>
      <% end %>
    <% end %>
    <div class="d-flex flex-wrap gap-2">
      <% performance[:artist_genres].each do |genre| %>
        <a href="#" class="btn btn-outline-primary btn-sm"><%= genre %></a>
      <% end %>
    </div>
    <div class="row mt-2">
      <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="my-1 me-1 btn btn-sm btn-primary w-100 rounded-2">Add to Favorites</button>
        <button type="button" class="my-1 ms-1 btn btn-sm btn-primary w-100 rounded-2">Add to Calendar</button>
      </div>
    </div>
  </div>
</div>