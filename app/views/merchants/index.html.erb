<style>
.carousel-columns-wrapper {
  display: flex;
}

.carousel-column {
  flex: 0 0 33.333%; /* Change to create three equal columns */
  max-width: 33.333%; /* Match the flex-basis */
}

.carousel-column-body {
  height: 100%;
  overflow-y: auto;
}

.carousel-inner {
  padding: 1em;
}

.carousel-control-prev,
.carousel-control-next {
  background-color: #1a1a1a;
  width: 5vh;
  height: 5vh;
  border-radius: 50%;
  transform: translateY(-50%);
}

@media (max-width: 767px) {
  .carousel-column {
    flex: 0 0 100%;
    max-width: 100%;
  }
}
</style>