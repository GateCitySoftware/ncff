<style>
.carousel-columns-wrapper {
  display: flex;
  justify-content: center;
}
.carousel-column img {
  max-width: 100%;
  max-height: 100%;
}
.carousel-column {
  margin: 0 0.5em;
  border: none;
  border-radius: 0;
}
.carousel-inner {
  padding: 1em;
}
.carousel-control-prev,
.carousel-control-next {
  background-color: #1a1a1a;
  width: 5vh;
  height: 5vh;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
}
@media (min-width: 768px) {
  .carousel-column img {
    height: 11em;
  }
}
</style>